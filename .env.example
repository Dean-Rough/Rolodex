# Rolodex Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE
# ============================================================================
# Primary database connection string
# For local development, leave empty to use auto-created SQLite: ./var/rolodex.db
# For production, use PostgreSQL with pgvector extension
DATABASE_URL=
# Legacy alias (optional, DATABASE_URL takes precedence)
SUPABASE_DB_URL=

# ============================================================================
# AUTHENTICATION
# ============================================================================
# Supabase JWT secret for validating access tokens (production)
SUPABASE_JWT_SECRET=
# Fallback JWT secret for local development
JWT_SECRET=your-local-dev-secret-change-this

# ============================================================================
# STORAGE & AI
# ============================================================================
# Supabase project configuration (optional, for image storage)
SUPABASE_PROJECT_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=

# OpenAI API key (optional, for AI extraction and embeddings)
# Falls back to dummy data if not provided
OPENAI_API_KEY=

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================
# CORS allowed origins (comma-separated)
ROLODEX_CORS_ORIGINS=http://localhost:3000,https://app.rolodex.app,https://staging.rolodex.app

# Capture workspace base URLs for extension deep links
ROLODEX_CAPTURE_BASE_URL=https://app.rolodex.app
ROLODEX_CAPTURE_STAGING_BASE_URL=https://staging.rolodex.app
ROLODEX_CAPTURE_DEVELOPMENT_BASE_URL=http://localhost:3000

# Demo data seeding (1 = enabled, 0 = disabled)
# Only seeds if database is empty and using SQLite
ROLODEX_SEED_DEMO=1

# ============================================================================
# FRONTEND CONFIGURATION (Next.js)
# ============================================================================
# Backend API base URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Demo bearer token for local development (matches backend fallback)
NEXT_PUBLIC_DEMO_TOKEN=demo-token-12345

# ============================================================================
# OPTIONAL: PRODUCTION SETTINGS
# ============================================================================
# Sentry DSN for error tracking
# SENTRY_DSN=

# Log level (debug, info, warn, error)
# LOG_LEVEL=info

# Rate limiting (requests per window)
# RATE_LIMIT=60
# RATE_WINDOW=60
