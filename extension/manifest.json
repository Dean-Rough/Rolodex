{
  "manifest_version": 3,
  "name": "Rolodex Capture Launcher",
  "short_name": "Rolodex",
  "version": "0.3.0",
  "version_name": "dev",
  "description": "Trigger the Rolodex capture workspace with a right-click.",
  "permissions": ["contextMenus", "storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Rolodex Capture"
  },
  "host_permissions": [
    "http://localhost:8000/*",
    "https://api.rolodex.app/*",
    "https://staging.api.rolodex.app/*"
  ]
}
