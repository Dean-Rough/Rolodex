{
  "manifest_version": 3,
  "name": "Rolodex Image Saver",
  "version": "0.1.0",
  "description": "Right-click to save product images to Rolodex.",
  "permissions": ["contextMenus", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 